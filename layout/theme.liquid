<!doctype html>
<html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }}
  <!-- Header hook for plugins -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,400;0,500;1,400;1,500&display=swap" rel="stylesheet">
{{ 'custom-styles.css' | asset_url | stylesheet_tag }}
  <!-- <link rel="stylesheet" href="{{ 'custom-styles.css' | asset_url }}" > -->
  <script src="//code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  {{ 'application.js' | asset_url | script_tag }}
</head>
<body>

  {% include 'header' %}
  <main role="main">
    {{ content_for_layout }}
    {% include 'footer' %}
  </main>

  {% if template != 'cart' %}
    {% include 'mini-cart' %}
  {% endif %}


</body>

</html>