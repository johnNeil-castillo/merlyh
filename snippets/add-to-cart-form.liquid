<form action="/cart/add" enctype="multipart/form-data" id="add-to-cart-form" method="post">

    {% if product.variants.size > 1 %}
        <div class="option-row">
            <span class="option-title">
                {{ product.options.first}}
            </span>
            <div class="option-fieldset">
                {% for variant in product.variants %}
                    <input class="variant-radio js-variant-radio" id="variant-{{ forloop.index }}" name="id" type="radio" value="{{ variant.id }}" data-inventory-quantity="{{ variant.inventory_quantity }}" {% unless variant.available%} disabled {% endunless %}>
                    <label for="variant-{{ forloop.index }}">{{ variant.title }}</label>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
    {% endif %}

    <div class="option-row">
        <label class="option-title" for="Quantity">{{ 'product.form.quantity' | t }}</label>
        <div class="visually-hidden">
            <input id="Quantity" min="1" name="quantity" type="number" class="js-quantity-field" value="1" {% if product.variants.size == 1 %} max="{{ product.variants.first.inventory_quantity }}" {% endif %}>
        </div>
        <div class="option-fieldset">
            <button class="quantity-button js-quantity-button minus" disabled type="button">&mdash;</button>
            <span class="quantity-text js-quantity-text">1</span>
            <button class="quantity-button js-quantity-button plus" type="button">+</button>
        </div>
    </div>

    <button id="add-to-cart-button" name="add" type="submit" {% if product.variants.size > 1 %} disabled {% endif %}>Add to cart</button>

</form>